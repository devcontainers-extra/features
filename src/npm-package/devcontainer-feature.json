{
    "name": "NPM package",
    "id": "npm-package",
    "version": "1.0.3",
    "description": "Installs an npm package globally.",
    "documentationURL": "http://github.com/devcontainers-extra/features/tree/main/src/npm-package",
    "installsAfter": [
        "ghcr.io/devcontainers/features/node"
    ],
    "options": {
        "package": {
            "type": "string",
            "proposals": [
                "typescript",
                "vtop",
                "fkill-cli"
            ],
            "default": "",
            "description": "Select the npm package to install."
        },
        "version": {
            "type": "string",
            "proposals": [
                "latest"
            ],
            "default": "latest",
            "description": "Select the version of the npm package to install."
        }
    }
}